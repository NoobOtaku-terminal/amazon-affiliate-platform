# Database Configuration
DB_USER=affiliate_user
DB_PASSWORD=your_secure_password_here
DB_NAME=affiliate_db
DB_HOST=localhost
DB_PORT=5432

# Backend Environment
NODE_ENV=development
PORT=5000
DATABASE_URL=postgresql://affiliate_user:your_secure_password_here@localhost:5432/affiliate_db

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_key_change_this
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Amazon Product Advertising API
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_PARTNER_TAG=your_affiliate_tag
AMAZON_REGION=us-east-1

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@affiliate.com

# Redis (optional)
REDIS_URL=redis://localhost:6379

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Environment
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SITE_NAME=Amazon Affiliate Hub
REACT_APP_SITE_URL=http://localhost:3000
