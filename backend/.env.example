# Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://affiliate_user:your_secure_password_here@localhost:5432/affiliate_db

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production_min_32_chars
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_key_change_this_min_32_chars
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Amazon Product Advertising API
AMAZON_ACCESS_KEY=your_amazon_access_key
AMAZON_SECRET_KEY=your_amazon_secret_key
AMAZON_PARTNER_TAG=your_affiliate_partner_tag
AMAZON_REGION=us-east-1
AMAZON_HOST=webservices.amazon.com

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password
EMAIL_FROM=noreply@affiliate.com

# Redis (optional)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Cron Jobs
SYNC_CRON_SCHEDULE=0 */6 * * *
CLEANUP_CRON_SCHEDULE=0 0 * * *
